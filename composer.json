{
	"name" : "supervillainhq/mongomigrations",
	"description": "Distribute mongo database changes",
	"config" : {
		"vendor-dir" : "vendor",
		"secure-http" : false,
		"cache-files-ttl": 0
	},
	"bin" : [
		"bin/mm"
	],
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/SupervillainHQ/Core"
		}
	],
	"autoload": {
		"psr-0": {
			"": "src"
		}
	},
	"require": {
		"php" : "^7",
		"ext-json" : "*",
		"ext-mongodb" : "*",
		"ext-phalcon" : "*",
		"mongodb/mongodb": "^1.0",
		"supervillainhq/core": "dev-master"
	},
	"require-dev":{
		"phalcon/devtools": "^4",
		"phpunit/phpunit": "^9"
	}
}
